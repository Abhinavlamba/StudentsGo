<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:layout_margin="8dp"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="0dp"
    android:id="@+id/branch_card"
    >
    <com.joooonho.SelectableRoundedImageView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:src="@drawable/ic_launcher_background"
        app:sriv_left_bottom_corner_radius="16dp"
        app:sriv_left_top_corner_radius="16dp"
        app:sriv_right_bottom_corner_radius="16dp"
        android:id="@+id/branchImage"
        app:sriv_right_top_corner_radius="16dp"
        android:scaleType="centerCrop"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:text="CSE DUAL"
        android:textSize="40sp"
        android:layout_margin="8dp"
        android:textColor="@color/white"
        android:fontFamily="@font/psb"

        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:text="2nd year"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:fontFamily="@font/psb"
            android:id="@+id/textView1"
            />
    </RelativeLayout>
</android.support.v7.widget.CardView>

